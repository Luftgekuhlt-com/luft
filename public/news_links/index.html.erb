<% content_for :admin_header do %>
<%= link_to("javascript:;",
        class: "btn-floating teal right modal-remote",
        data: { key: "new_news_link_modal", url: new_admin_news_link_path}) do %><i class="material-icons">add</i><% end %>
<h1>News Items</h1>
<% end %>

<div class="row">
  <div class="col m12 news-items-list">
    <% if @news_links.any? %>
      <% @news_links.each do |news_link| %>
      <div class="row news-item">
        <div class="col m10">
          <h4><%= news_link.title %></h4>
          <div><%= news_link.publish_date %>&nbsp;</div>
        </div>
        <div class="col m2 actions">
          <div class="fixed-action-btn direction-left">
            <a class="btn-floating btn-large teal">
              <i class="material-icons">menu</i>
            </a>
            <ul>
              <li>
                <%= link_to(admin_news_link_path(news_link), method: :delete, remote: true,
                    data: { confirm: "Are you sure you want to delete this news item?" },
                    class: 'btn-floating red',
                    title: 'Delete') do %><i class="material-icons">delete</i><% end %>
              </li>
              <li>
                <%= link_to("javascript:;",
                    class: "modal-remote btn-floating teal darken-1",
                    data: { key: "edit_news_link_modal", url: edit_admin_news_link_path(news_link) }) do %><i class="material-icons">edit</i><% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <% end %>
    <% else %>
      <div>
        <div class="alert alert-info" style="margin:0;">There are no news items</div>
      </div>
    <% end %>
  </div>
</div>