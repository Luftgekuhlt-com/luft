<%= simple_form_for @dealer, { url: [:admin, @dealer], remote: true } do |f| %>
    <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title"><%= @dealer.persisted? ? "Edit" : "New" %> Dealer</h4>
        </div>
        <div class="modal-body">
            <%= f.error_notification %>

          <div class="row">
            <%= f.input :name, wrapper_html: { class: "col-md-12" }  %>
            <%= f.input :address, wrapper_html: { class: "col-md-8" }  %>
            <%= f.input :address2, wrapper_html: { class: "col-md-4" }  %>
            <%= f.input :city, wrapper_html: { class: "col-md-6" }  %>
            <%= f.input :state, wrapper_html: { class: "col-md-3" }  %>
            <%= f.input :postal_code, wrapper_html: { class: "col-md-3" }  %>
            <%= f.input :phone, wrapper_html: { class: "col-md-12" }  %>
            <%= f.input :website, wrapper_html: { class: "col-md-12" }  %>
          </div>
        </div>
        <div class="modal-footer">
            <%= f.button :button, "Cancel", class: "btn btn-default", data: { dismiss: "modal" } %>
            <%= f.button :submit, "Save", class: "btn btn-primary btn-submit", data: { disable_with: "Save" } %>
        </div>
    </div> <!-- /.modal-content -->
<% end %>