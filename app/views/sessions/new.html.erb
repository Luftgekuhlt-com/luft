<div class="content-wrap">
    <h2>Login</h2>
    <div class="row">
        <div class="col m9">
            <p>Please enter your username and password to access your San Diego Opera online account.</p>
            <%= simple_form_for(@session, as: "session", :html => { method: "post", role: "form", id:"login_user"  }, :url => sdo_session_path ) do |f| %>
                <%= render partial: "/shared/error_messages", locals: {model: @session} %>
                <div class="row">
                    <%= f.input :user_name, label: "Username", hint: "Your email address is your username", wrapper_html: { class: 'm4 s6' } %>
                </div>
                <div class="row">
                    <%= f.input :password, wrapper_html: { class: 'm4 s6' } %>
                    <div class="col m4 s6">
                        <%= link_to("Forgot your password?", forgot_password_path, style: "margin-top: 25px;display:block;line-height:34px;") %>
                    </div>
                </div>
                <div class="form-actions">
                    <%= f.button :submit, "Login", class: "btn btn-primary" %>
                </div>
                
            <% end %>
        </div>
        <div class="col m3">
            <div class="card">
                <div class="card-content">
                    <h4 class="card-title">Not registered yet?</h4>
                    <%= link_to("Register Now", new_account_path, class: "btn btn-primary btn-block") %>
                </div>
            </div>
