<h4 style="margin:0;">Yes! I will donate with a contribution of: <%= number_to_currency(params[:amount]) %></h4>
<%= form_tag(contributions_process_checkout_path, class: "contribution-checkout-form") do %>
  <%= hidden_field_tag :amount, params[:amount] %>
  <%= hidden_field_tag :fund, params[:fund] %>
  <%= hidden_field_tag :donor_listing, params[:donor_listing] %>
  <%= hidden_field_tag :in_honor_of, params[:in_honor_of] %>
  <div class="form-group">
      <label>Name on Card:</label>
      <%= text_field_tag :card_name, params[:card_name], class: 'form-control' %>
  </div>
  <div class="form-group">
      <label>Card Type:</label>
      <%= text_field_tag :card_type, params[:card_type], class: 'form-control' %>
  </div>
  <div class="row">
      <div class="col-md-8">
          <div class="form-group">
              <label>Card Number:</label>
              <%= text_field_tag :card_number, params[:card_number], class: 'form-control' %>
          </div>
      </div>
      <div class="col-md-3">
          <div class="form-group">
              <label>CVV:</label>
              <%= text_field_tag :card_cvv, params[:card_cvv], class: 'form-control' %>
          </div>
      </div>
  </div>
  <hr/>
  <div style="text-align:right;">
      <%= link_to("Back", contributions_info_path(params.permit(:amount, :fund, :in_honor_of, :donor_listing)), class: "btn btn-default pull-left") %>
      <%= submit_tag 'Donate Now', class: "btn btn-primary" %>
  </div>
<% end %>
<% content_for :scripts do %>
<script type="text/javascript">
   
</script>
<% end %>