<%= simple_form_for @performance_history, { url: [:admin, @performance_history], remote: true } do |f| %>
  <div class="modal-content" style="max-height: 480px;">
    <h4 class="modal-title"><%= @performance_history.persisted? ? "Edit" : "New" %> Performance History</h4>
    <%= f.error_notification %>

    <div class="row">
        <%= f.input :title, wrapper_html: { class: "col m12" }  %>
    </div>
    <div class="row">
        <%= f.input :composer, wrapper_html: { class: "col m6" }  %>
        <%= f.input :season, as: :select, collection: 1.year.from_now.year.downto(1965), include_blank: false, wrapper_html: { class: "col m6" }  %>
    </div>
    <div class="row">
        <%= f.input :performance_dates, wrapper_html: { class: "col m6" }  %>
        <%= f.input :first_performance_date, as: :date, input_html: {value: @performance_history.first_performance_date}, wrapper_html: { class: "col m6" }  %>
    </div>
    <div class="row">
        <%= f.input :content, label: "Summary", wrapper_html: { class: "col m12 html-editor" }  %>
    </div>
  </div>
  <div class="modal-footer">
      <a href="javascript:;" class="btn modal-close">Cancel</a>
      <%= f.button :submit, "Save", class: "btn btn-primary btn-submit", data: { disable_with: "Save" } %>
  </div>
<% end %>