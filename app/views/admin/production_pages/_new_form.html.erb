 <%= simple_form_for @document, { url: admin_production_pages_path } do |f| %>
    <h4 class="modal-title">New Production Page</h4>
    <%= f.error_notification %>

    <div class="row">
      <%= f.input :title, wrapper_html: { class: "col m12" }  %>
    </div>
    <div class="row">
      <%= f.input :production_number, as: :select, label: "Production Number", collection: Production.productions.collect{|s| [s.description, s.id]}, prompt: "-- Select Production --", include_blank: false, wrapper_html: { class: "col m6" }  %>
    </div>
    <div class="modal-footer">
        <%= f.button :button, "Cancel", class: "btn modal-close"%>
        <%= f.button :submit, "Save", class: "btn btn-primary btn-submit", data: { disable_with: "Save" } %>
    </div>
  <% end %>