<% if @performance_history.errors.empty? %>
  console.log(<%= @performance_history.to_json.html_safe %>);
  window.location.reload(true);
<% else %>
  $("#<%= dom_id @performance_history, :edit %>").replaceWith("<%= j render(partial: 'form', locals: { performance_history: @performance_history }) %>")
<% end %>