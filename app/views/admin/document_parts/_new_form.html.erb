<div class="modal-content">
  <%= simple_form_for @document_part, { url: admin_document_document_section_document_parts_path(document_id: @document.id, document_section_id: @document_section.id), as: :document_part } do |f| %>
    <h4 class="modal-title">New Content Block</h4>
    <%= f.error_notification %>

    <div class="row">
      <%= f.input :title, wrapper_html: { class: "col m12" }  %>
    </div>
    <div class="row">
      <%= f.input :type, as: :select, label: "Content Type", collection: Document::PART_TYPES.map{|k, v| [v, k]}, prompt: "-- Select Content Type --", include_blank: false, wrapper_html: { class: "col m6" }  %>
      <%= f.input :section_pane, as: :select, label: "Pane", collection: [["Main","main"],["Left","left"],["Right","right"]], prompt: "-- Select Pane --", include_blank: false, wrapper_html: { class: "col m6" }  %>
    </div>
    <div class="row">
      <%= f.input :hidden, wrapper_html: { class: "col m6" }  %>
    </div>
    <div class="modal-footer">
        <a href="javascript:;" class="btn modal-close">Cancel</a>
        <%= f.button :submit, "Save", class: "btn btn-primary btn-submit", data: { disable_with: "Save" } %>
    </div>
  <% end %>
</div> <!-- /.modal-content -->