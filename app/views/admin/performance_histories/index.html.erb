<% content_for :admin_header do %>
<%= link_to("javascript:;",
        class: "btn-floating teal right modal-remote",
        data: { key: "new_performance_history_modal_ctr", url: new_admin_performance_history_path}) do %><i class="material-icons">add</i><% end %>
<h1>Performance Histories</h1>
<% end %>

<div class="row">
  <div class="col m12 news-items-list">
    <% if @performance_histories.any? %>
      <% @performance_histories.each do |performance_history| %>
      <div class="row news-item">
        <div class="col m10">
          <h4><%= performance_history.title %></h4>
          <div><%= performance_history.season %>&nbsp;</div>
        </div>
        <div class="col m2 actions">
          <div class="fixed-action-btn direction-left">
            <a class="btn-floating btn-large teal">
              <i class="material-icons">menu</i>
            </a>
            <ul>
              <li>
                <%= link_to(admin_performance_history_path(performance_history), method: :delete, remote: true,
                    data: { confirm: "Are you sure you want to delete this news item?" },
                    class: 'btn-floating red',
                    title: 'Delete') do %><i class="material-icons">delete</i><% end %>
              </li>
              <li>
                <%= link_to("javascript:;",
                    class: "modal-remote btn-floating teal darken-1",
                    data: { key: "edit_performance_history_modal_ctr", url: edit_admin_performance_history_path(performance_history) }) do %><i class="material-icons">edit</i><% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <% end %>
    <% else %>
      <div>
        <div class="alert alert-info" style="margin:0;">There are no performance histories</div>
      </div>
    <% end %>
  </div>
</div>