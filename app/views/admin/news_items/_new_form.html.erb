 <%= simple_form_for @document, { url: admin_news_items_path, as: :document } do |f| %>
    <h4 class="modal-title">New News Item</h4>
    <%= f.error_notification %>

    <div class="row">
      <%= f.input :title, wrapper_html: { class: "col m12" }  %>
    </div>
    <div class="modal-footer">
        <a href="javascript:;" class="btn modal-close">Cancel</a>
        <%= f.button :submit, "Save", class: "btn btn-primary btn-submit", data: { disable_with: "Saving..." } %>
    </div>
  <% end %>